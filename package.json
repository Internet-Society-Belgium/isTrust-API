{
    "name": "trest-api",
    "version": "0.1.0",
    "description": "trest API",
    "homepage": "https://github.com/Progitiel/trest-api#readme",
    "bugs": {
        "url": "https://github.com/Progitiel/trest-api/issues"
    },
    "author": {
        "name": "Progiciel",
        "url": "https://progiciel.be/"
    },
    "main": "build/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/Progitiel/trest-api.git"
    },
    "scripts": {
        "prepare": "husky install",
        "lint": "eslint --fix",
        "lint:staged": "lint-staged",
        "format": "prettier -w .",
        "format:staged": "pretty-quick --staged",
        "serve": "node .",
        "serve:dev": "node -r dotenv/config .",
        "serve:dev:watch": "nodemon --exec 'npm run build && npm run dev' --ignore build/",
        "build": "node utils/prebuild.js && tsc && node utils/postbuild.js",
        "pack": "node utils/pack.js",
        "commit": "cz",
        "release:patch": "dotenv release-it patch",
        "release:minor": "dotenv release-it minor",
        "release:major": "dotenv release-it major"
    },
    "dependencies": {
        "express": "^4.17.1",
        "fs-extra": "^10.0.0",
        "helmet": "^4.6.0",
        "maxmind": "^4.3.2",
        "tar": "^6.1.11"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^3.3.0",
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.12",
        "@types/tar": "^4.0.5",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "archiver": "^5.3.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "dotenv-cli": "^4.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "nodemon": "^2.0.12",
        "prettier": "^2.4.0",
        "release-it": "^14.11.5",
        "typescript": "^4.3.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
